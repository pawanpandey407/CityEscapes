<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>
<div class="container my-4 text-center">
  <h1>All Available Sites</h1>
</div>

  <% for (let site of sites) { %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img class="img-fluid" src="<%= site.image %>" alt="">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%=site.title%></h5>
            <p class="card-text"><%= site.description%></p>
            <p class="card-text">
              <small class="text-muted"><%=site.location%></small>
            </p>
            <a href="/sites/<%=site._id%>" class="btn btn-primary">View <%=site.title%></a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
  
  <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const sites = {features : <%-JSON.stringify(sites)%>};
  </script>
  <script src="/javascripts/clusterMap.js"></script>