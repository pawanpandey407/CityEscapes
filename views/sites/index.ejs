<% layout('layouts/boilerplate') %>

<div id="cluster-map"></div>
<div class="container my-4 text-center">
  <h1><em>All Available Sites</em></h1>
</div>

  <% for (let site of sites) { %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <% if(site.images.length) { %> 
          <img class="img-fluid" src="<%= site.images[0].url%>" alt="">
          <% } else { %> 
            <img class="img-fluid" src="https://images.unsplash.com/photo-1470071459604-3b5ec3a7fe05?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8NHx8bmF0dXJlfGVufDB8fDB8&auto=format&fit=crop&w=800&q=60" alt="">
          <% } %> 
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%=site.title%></h5>
            <p class="card-text"><%= site.description%></p>
            <p class="card-text">
              <small class="text-muted"><%=site.location%></small>
            </p>
            <a href="/sites/<%=site._id%>" class="btn btn-primary">View <%=site.title%></a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
  
  <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const sites = {features : <%-JSON.stringify(sites)%>};
  </script>
  <script src="/javascripts/clusterMap.js"></script>